<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.huntloc.handheld.JournalFragment">

    <TextView
        android:id="@+id/textView_Credential"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:textSize="23sp" />

    <!-- android:layout_weight=".20"  android:layout_weight=".20" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".TabbedActivity$JournalSectionFragment" >

        <ImageView
            android:id="@+id/imageView_Portrait"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:minHeight="350dp"
            android:minWidth="350dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".TabbedActivity$JournalSectionFragment" >

            <Button
                android:id="@+id/button_Entrance"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight=".45"
                android:text="@string/button_Entrance_text"
                android:textSize="23sp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight=".1" />

            <Button
                android:id="@+id/button_Exit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_margin="2dp"
                android:layout_weight=".45"
                android:text="@string/button_Exit_text"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="3" >

        <TextView
            android:id="@+id/textView_DriverLicenseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="left"
            android:text=""
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/imageView_DriverLicenseDate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView_DriverLicenseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="left"
            android:text=""
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/imageView_DriverLicenseType"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView_DefenseDrivingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="left"
            android:text=""
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/imageView_DefenseDrivingDate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY" />
    </GridLayout>


</LinearLayout>
